<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:background="#CCFFFF">

    <Button
        android:id="@+id/home_activity_button"
        android:layout_below="@+id/get_started_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="@string/home_activity_button"
        android:onClick="navigateToAddParticipants"
        android:layout_centerHorizontal="true" />

    <TextView android:id="@+id/home_header_message"
        android:layout_weight="0.97"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home_header_message"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textStyle="italic"
        android:textSize="30sp"
        android:textColor="@color/colorForText"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="34dp" />

    <TextView android:id="@+id/get_started_message"
        android:layout_weight="0.97"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="@string/get_started_message"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textStyle="normal"
        android:textSize="24sp"
        android:textColor="@color/colorForText"
        android:layout_below="@+id/home_header_message"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="45dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/pearson_logo"
        android:background="@color/colorForFooter"
        android:layout_alignParentEnd="true" />
</RelativeLayout>